{
  "name": "ruanm-screensaver",
  "version": "1.0.2",
  "description": "Ruanm Screensaver Application",
  "main": "main.js",
  "bin": {
    "RuanmScreensaver": "./bin/RuanmScreensaver"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test-weather": "node test-weather-api.js"
  },
  "keywords": [
    "screensaver",
    "electron",
    "wallpaper",
    "lockscreen"
  ],
  "author": "Ruan Mingze",
  "license": "MIT",
  "build": {
    "appId": "com.ruanm.screensaver",
    "productName": "Ruanm Screensaver",
    "icon": "Assets/Icons/app-icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "screensaver.html",
      "about.html",
      "help.html",
      "test-api.html",
      "test-api.js",
      "test-weather-api.js",
      "Assets/**/*",
      "node_modules/**/*",
      "!node_modules/electron/**/*",
      "!node_modules/.bin/**/*",
      "!**/*.map",
      "!**/*.md",
      "!**/*.txt",
      "!test/",
      "!docs/"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "../bin/"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-${version}.${ext}",
      "icon": "Assets/Icons/app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "compression": "normal"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^23.6.0",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-squirrel-startup": "^1.0.1",
    "font-list": "^2.0.1"
  }
}